<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <View
        android:id="@+id/blank_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/join_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/input_id"
        android:hint="@string/join_name"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/blank_view" />

    <EditText
        android:id="@+id/join_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/input_id"
        android:hint="@string/join_id"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/join_name" />

    <EditText
        android:id="@+id/join_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/input_id"
        android:hint="@string/join_pw"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/join_id" />

    <EditText
        android:id="@+id/join_check_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/input_id"
        android:hint="@string/check_pw"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/join_pw" />
</androidx.constraintlayout.widget.ConstraintLayout>